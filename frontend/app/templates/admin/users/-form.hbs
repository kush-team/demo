<form {{action "save" on="submit"}} class="create-event">
  <fieldset>
    <label>
      Nombre
      {{input type="text" value=model.name}}
    </label>
  </fieldset>
  
  <fieldset>
    <label>
      Apellido
      {{input type="text" value=model.lastName}}
    </label>
  </fieldset>

  <fieldset>
    <label>
      Email
      {{input type="text" value=model.email}}
    </label>
  </fieldset>

  <fieldset>
    <label>
      Contrase√±a
      {{input type="text" value=model.password}}
    </label>
  </fieldset>

  <fieldset>
    <label>
      Roles
      {{multiselect-checkboxes options=controller.roleList labelProperty='label' selection=model.roles}}      
    </label>
  </fieldset>

   <fieldset>
    <label>
      Ministerios
      {{multiselect-checkboxes options=controller.ministryList labelProperty='name' selection=model.ministries}}      
    </label>
  </fieldset>


   <fieldset>
    <label>
      Bloque
      {{model-selector modelName='brick' value=model.brick optionLabelPath="content.name" }}
    </label>
  </fieldset>
  
   
  <fieldset>
    <input type="submit" value="Guardar">
  </fieldset>
</form>

