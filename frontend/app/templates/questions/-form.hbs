<form class="ui large form" {{action "save" on="submit"}}>
    <div class="field -action">
        {{ui-checkbox name="isEnabled" checked=model.published class="toggle" label="Publicar"}}
    </div> 

    <input type="submit" class="ui button blue -action" value="Guardar">

    <div class="field">
      <label>Titulo</label>
      {{input type="text" value=model.title}}
    </div>

    <div class="field">
      <label for="">Etiquetas</label>
      
    {{searchable-select
      content=controller.tags
      sortBy="name"
      optionLabelKey="name"
      multiple=true
      on-change=(action "updateTags")
      prompt="Agregar etiquetas"
      on-add=(action "addNewTag")}}
    </div>

    <div class="field">
      <label for="">Co Autores</label>

      {{searchable-select
        content=controller.users
        sortBy="fullName"
        optionLabelKey="fullName"
        multiple=true
        on-change=(action "updateUsers")
        prompt="CoAutores"}}    
     </div>  

    <div class="field">
      <label for="">Pregunta</label>
      {{froala-editor content=model.text on-contentChanged=(action "changedContent")}}
    </div>



 
</form>

